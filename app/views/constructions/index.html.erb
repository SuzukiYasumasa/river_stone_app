<h1 class="headline col-12 rounded">工事名</h1>

<%= form_with(model: @construction, local: true) do |form| %>
  <div class="row bg-newrecord py-2">
    <div class="col-12">
      <%= render 'shared/error_messages', object: @construction %>
    </div>
  </div>

  <div class="field row justify-content-around bg-newrecord py-2">
    <%= form.label :name, class: "col-2" %>
    <%= form.text_field :name, class: "form-control col-9" %>
  </div>

  <div class="actions row justify-content-around bg-newrecord py-2">
    <%= form.submit '新規工事名登録', class: "col-4 col-sm-3 btn btn-primary" %>
  </div>
<% end %>

<% @constructions.each do |construction| %>
  <div id="<%= construction.id %>">
    <%= form_with(model: construction) do |form| %>
      <div class="row table-data-bottom bg-table-primary mt-2 d-flex align-items-center">
        <div class="col-12 col-md-5 col-lg-5 py-2"><%= construction.name %></div>
        <div class="col-8 col-md-4 col-lg-5 field py-2"><%= form.text_field :name, class: "form-control" %></div>
        <div class="col-3 col-lg-2 actions py-2">
          <%= form.submit '変更', class: "btn btn-outline-info btn-sm" %>
          <%= link_to(construction, method: :delete, data: { confirm: '本当に削除しますか?' }) do %><div class="btn btn-outline-danger btn-sm">削除</div><% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>