<div class="text-center h3 mb-3 mt-5">
  パスワード再発行
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="text-center">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
    </div>
  </div>

  <div class="actions text-center mt-4">
    <%= f.submit "パスワード再発行", class: "btn btn-info" %>
  </div>
<% end %>
<br>
<div class="text-center"><%= link_to "ログイン画面へ", new_session_path(resource_name) %></div>